div[role='toolbar']
    box-sizing: border-box
    height: 100%
    padding-top: 25px
    min-width: 280px
    flex-basis: 280px
    display: flex
    flex-direction: column
    background-color: $background-dark
    border: solid 1px #cedae4

    .tools
        padding-left: 16px
        padding-right: 16px

        .button
            cursor: pointer
            font-family: 'Source Sans Pro'
            font-weight: bold
            background-color: $blue
            border-radius: 2px
            height: 38px
            margin-bottom: 2px
            width: 100%
            padding-left: 15px
            box-sizing: border-box

            #import-sc-text
                display: none

            svg
                position: relative
                height: 20px
                width: 20px
                top: 6px
                fill: $white

            p
                position: relative
                padding-left: 4px
                font-size: 14px
                line-height: 1.4
                margin-top: 9px
                margin-bottom: 10px
                height: 20px
                color: $white
                display: inline-block
                text-transform: uppercase

        .button:active
            padding-top: 1px

        .button-focused
            background-color: transparent
            border: solid 1px $blue


            input[type='text']
                all: unset
                box-sizing: border-box
                width: 100%
                height: 100%
                color: $text-light

        #search
            margin-top: 30px

        .input
            font-family: 'Source Sans Pro'
            font-style: italic
            width: 100%
            height: 38px
            border-radius: 2px
            border: solid 1px $grey
            box-sizing: border-box
            position: relative

            p
                display: none

            svg
                position: absolute
                height: 20px
                width: 20px
                top: 8px
                left: 15px
                fill: $grey

            input[type='text']
                color: #788195
                all: unset
                padding-left: 40px
                box-sizing: border-box
                width: 100%
                height: 100%

        .input-focused
            border: solid 1px $blue
            font-style: normal

            svg
                fill: $blue
