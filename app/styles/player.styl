#player-container
    box-sizing: border-box
    position:absolute
    bottom:0
    left:0
    height: 72px
    width: 100%
    background-color: $background-dark
    border: solid 1px $border-color

    audio
        position: absolute
        top: 20px
        right: 0px

    .player
        display: flex
        width: 100%

    .play-controls
        padding-left 16px
        padding-top: 12px
        padding-bottom: 12px
        width: 280px
        box-sizing: border-box

        .album
            height: 48px
            width: 48px
            box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.1)
            padding: 0px
            background-color: white

            path
                fill: $blue

        svg
            height: 34px
            width: 34px
            padding-top: 7px
            padding-bottom: 7px
            padding-left: 28px

            path
                fill: $svg

    .timeline
        margin-left: 32px
        margin-right: 32px
        flex-grow: 1

        .text-container
            width: 100%
            justify-content: center
            display: flex

            p
                ellipsis()
                margin-top: 6px
                color: $text-light

            #artist
                color: $text-light

        p
            color: $text
            height: 20px
            font-family: "Source Sans Pro"
            font-weight: bold
            font-size: 14px
            line-height: 1.5
            display: inline-block
            margin-top: 2px

        #total-time
            float: right

        #progress-bar
            margin-top: 8px
            background-color: $border-color
            width: 100%
            height: 4px
            border-radius: 2px
            cursor: pointer

            #progress
                width: 0%
                height: 4px
                border-radius: 2px
                background-color: $blue

    .controls
        width: 280px

        #volume-bar
            width: 90px
            height: 4px
            border-radius: 2px
            background-color: $border-color
            display: inline-block
            position: absolute
            top: 34px
            cursor: pointer

            #volume
                width: 100%
                height: 4px
                border-radius: 2px
                background-color: $svg

        svg
            width: 20px
            height: 20px
            margin-top: 26px
            margin-right: 10px
            display: inline-block

            path
                fill: $text

        .active
            path
                fill: $svg-red

        #repeat-one-sm
            path
                fill: $svg-red

        #broadcast
            margin-left: 100px
            path
                fill: $svg-red
