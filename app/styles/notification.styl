div[role='toolbar']
    .notification
        position: absolute
        left: 16px
        bottom: 93px
        width: 248px
        height: 66px
        border-radius: 3px
        background-color: #696d78
        box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.1)
        opacity: 0
        visibility: visible
        display: flex
        align-items: center

        p
            padding-left: 14px
            padding-right: 32px
            font-family: "Source Sans Pro"
            font-size: 16px
            line-height: 1.3
            color: $white
            overflow: hidden
            text-overflow: "â€¦"

        svg
            margin-left: 14px
            width: 40px
            height: 40px
            fill: $white

        .spinner
            animation 1s linear infinite spin

    .load
        visibility: visible
        opacity: 1

    .notify
        animation-timing-function: ease;
        animation-name: notify;
        animation-duration: 3s;

@keyframes notify {
    0%   {opacity: 0; visibility: visible}
    10%  {opacity: 1}
    90%  {opacity: 1}
    100% {opacity: 0; visibility: hidden}
}

@keyframes spin
    from
        transform rotate(0deg)

    to
        transform rotate(359deg)
